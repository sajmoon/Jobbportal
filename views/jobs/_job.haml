%tr
  %td
    %a{href:"/companies/#{job.company.id}/"}= job.company.name
  %td
    = job.title
  %td
    = job.created_at
  %td
    = job.display_categories
  %td 
    %a.btn.btn-primary{href: "/jobs/#{job.id}/" } 
      %i.icon-info-sign.icon-white 
      Mer info
    - unless env["warden"].user.nil?
      -if env["warden"].user.company_id == job.company.id
        %a.btn.btn-info{href: "/jobs/#{job.id}/edit"} 
          %i.icon-edit.icon-white
          Redigera
      - if env["warden"].user.role == Role.admin
        %a.btn.btn-warning{href: "/jobs/#{job.id}/delete"} 
          %i.icon-trash.icon-white 
          Ta bort

