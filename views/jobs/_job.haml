%tr
  %td
    %a{href: "jobs/#{job.id}/" }
      %img{src: job.company.img_url, width: "100", height: "120", alt: job.company.name}
  %td
    = job.title
    - if job.is_new
      %span.label.label-success
        Ny!
  %td
    = job.display_categories
  %td 
    %a.btn.btn-primary.btn-mini{href: "/jobs/#{job.id}/" } 
      %i.icon-info-sign.icon-white 
      Mer info
    - if can? :edit, job
      %a.btn.btn-info.btn-mini{href: "/jobs/#{job.id}/edit"} 
        %i.icon-edit.icon-white
        Redigera
