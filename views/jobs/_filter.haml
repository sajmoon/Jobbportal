%form.form{action: "/jobs/filter", method: "post"}
  .fieldset
    .control-group
      .controls.well
        - @categories.each do |cat|
          %label.checkbox.inline
            %input{type: "checkbox", name: "filter[id][]", value: cat.id, checked: @selected_categories.include?(cat)}
            = cat.name
        %input.btn.btn-primary.btn-mini{type: "submit", value: "Filtrera"}
