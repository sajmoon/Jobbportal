    %script{src: "/js/jquery.min.js"}
    %script{src: "/js/jquery-ui.min.js"}
    %script{src: "/js/bootstrap.min.js"}
    %script{src: "/js/rails.js"}
    %script{src: "/js/application.js"}
    %script{src: "/js/jquery.timeago.js"}
  %body
    = haml :"header"
    - flash.each do |name, msg|
      .alert{class: "alert-#{name}" }
        %button.close{"data-dismiss" => "alert"}
          x
        .message
          = msg
    .container-fluid
      .content
        = yield
      %hr
        %footer
          .span7.offset1
            = haml :"subscribe"
          .span4
            %p.pull-right
              %a{href: "/jobs/rss.xml"}
                RSS feed
              Jobbportalen 
              %a{href: "http://www.datasektionen.se"} KTH Datasektionen 
