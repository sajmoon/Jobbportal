.row-fluid
  .span10.offset1
    %h1
      = "Annonser från #{@company.name}"
  
    %a{href: "/companies/#{@company.id}/password"} Byt lösenord
    - if can? :delete, @company
      -if @company.active?
        %a{href: "/companies/#{@company.id}/delete"} Avaktivera
      - else 
        %a{href: "/companies/#{@company.id}/activate"} Aktivera
    %hr
    %h5
      Här kan du se vilka annonser ni har haft ute senaste tiden.
    .active_ads
      %h4
        Aktiva Annonser
      = haml :"companies/_jobs", locals: {jobs: @company.jobs.running_now}

    %hr
    .upcomming_ads
      %h4
        Kommande annonser
      = haml :"companies/_jobs", locals: {jobs: @company.jobs.not_started}
    
    %hr
    .previous_ads
      %h4
        Tidigare Annonser
      = haml :"companies/_jobs", locals: {jobs: @company.jobs.has_ended}
    
