.row-fluid
  .span6
    %h1 Kategorier
    %hr

    - unless env["warden"].user.nil?
      - if env["warden"].user.role == Role.admin
        %a.btn.btn-info.btn-mini{href: "/categories/new"} LÃ¤gg till en ny kategori

    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th ID
          %th Name
      %tbody
